$('#modal_notice_block_invite_friends').html('<%= escape_javascript render('shared/alert_notice') %>');

<% if @incorrect_emails.blank? %>
  $('#close_modal_invite_friends').focus();
  $('#modal_invite_friends_emails').attr('class', '');
<% else %>
  $('#modal_invite_friends textarea:first').focus();
  $('#modal_invite_friends_emails').attr('class', 'field_with_errors');
<% end %>
