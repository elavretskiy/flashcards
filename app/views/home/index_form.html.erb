<%= simple_form_for @card, url: review_card_trainer_index_path(@card) do |f| %>
  <% if flash[:alert]%>
    <div class="alert alert-info alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <% if flash[:alert] %>
        <p id="notice"><%= flash[:alert] %></p>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.input :original_text, disabled: true, required: false, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= label_tag '', 'Translated text' %>
    <%= text_area_tag :user_translation, nil, class: 'form-control', required: true, autofocus: true %>
  </div>

  <%= f.button :submit, 'Проверить', class: 'btn btn-default' %>
<% end %>