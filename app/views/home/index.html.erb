<%= simple_form_for @card, url: check_words_card_path(@card) do |f| %>
  <% if flash[:alert]%>
    <div class="alert alert-info alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <% if flash[:alert] %>
        <p id="notice"><%= flash[:alert] %></p>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.input :original_text, disabled: true, input_html: { class: 'form-control', required: true } %>
  </div>

  <div class="form-group">
    <%= f.input :translated_text,  as: :text, label: 'Translated text',
                input_html: { value: '', class: 'form-control', required: true, autofocus: true } %>
  </div>

  <%= f.button :submit, 'Проверить', class: 'btn btn-default' %>
<% end %>