<div class="row" id="header">
  <div class="col-sm-12">
    <nav class="navbar navbar-default" id="header">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to 'Флэшкарточкер', root_path, class: "navbar-brand" %>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <% if current_user %>
            <ul class="nav navbar-nav navbar-left">
              <li><%= link_to 'Все карточки', cards_path %></li>
              <li><%= link_to 'Добавить карточку', new_card_path %></li>
            </ul>
          <% end %>
          <p class="navbar-text navbar-right">
            <% if current_user %>
              <%= link_to 'Профиль', edit_user_path(current_user.id),
                          class: 'navbar-link' %> |
              <%= link_to 'Удалить', @user, method: :delete,
                          data: { confirm: 'Удалить пользователя?' },
                          class: 'navbar-link' %> |
              <%= link_to 'Выйти', :logout, method: :post,
                          class: 'navbar-link' %>
            <% else %>
              <%= link_to 'Зарегистрироваться', new_user_path, class: 'navbar-link' %> |
              <%= link_to 'Войти', :login, class: 'navbar-link' %>
            <% end %>
          </p>
        </div>
      </div>
    </nav>
  </div>
</div>