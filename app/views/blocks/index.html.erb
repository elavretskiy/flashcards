<table class="table table-hover table-condensed">
  <thead>
  <tr>
    <th>Название</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @blocks.each do |block| %>
    <tr class="table table-hover table-condensed">
      <td><%= block.title %></td>

      <% if block.current? %>
        <td>
          <%= link_to 'Сделать обычной', block_reset_as_current_path(block),
                      method: :post %>
        </td>
      <% else %>
        <td>
          <%= link_to 'Сделать текущей', block_set_as_current_path(block),
                      method: :post %>
        </td>
      <% end %>
      <td><%= link_to 'Редактировать', edit_block_path(block) %></td>
      <td><%= link_to 'Удалить', block, method: :delete,
                      data: { confirm: 'Удалить колоду?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
